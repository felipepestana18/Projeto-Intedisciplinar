@model List<Cliente>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Clientes
            <a class="btn btn-primary" style="float: right" href="/Cliente/Create">Adicionar</a></h6>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">Status</th>
                <th scope="col">Editar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tec in Model)
            {
                <tr>
                    <th scope="row">@tec.Nome</th>
                    <th scope="row">@tec.Email</th>
                    <th scope="row">@tec.Telefone</th>
                    <th scope="row">@tec.StatusNome</th>
                    <th>
                        <a class="btn btn-info btn-circle btn-sm" href="/Cliente/Update/@tec.Pessoa_Codigo">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </th>
                    <th>
                        <a class="btn btn-danger btn-circle btn-sm" href="/Cliente/Delete/@tec.Pessoa_Codigo">
                            <i class="fas fa-trash"></i>
                        </a>
                    </th>

                </tr>

            }
        </tbody>
    </table>
</div>


