@model Servico

<h2>Cadastro - Serviços</h2>
<form asp-controller="Servico" asp-action="Create" method="post">
    <hr>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Nome do Serviço" />
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" placeholder="Valor do Serviço" />
        <span asp-validation-for="Valor"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Descrição do Serviço" />
        <span asp-validation-for="Descricao"></span>
    </div>
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input asp-for="Status" type="radio" checked name="status" id="inlineCheckbox1" value="1">
            <span asp-validation-for="Status" style="margin-left: 5px">Ativo</span>
        </div>
    </div>

    <button class="btn btn-primary ">Salvar</button>
</form>